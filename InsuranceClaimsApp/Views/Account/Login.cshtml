@model InsuranceClaimsApp.Models.Account.LoginInputModel

@{
    ViewData["Title"] = "Login Page";
}

<form asp-action="login" method="post">
    @Html.AntiForgeryToken()
    <div>
        <span class="text-danger">@Html.ValidationMessage("other")</span>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input type="text" class="form-control" asp-for="Username" placeholder="Enter user name">
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>